@model Landing.PL.Areas.Dashboard.ViewModels.CombinedViewModel

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Modern Interior <span class="d-block">Design Studio</span></h1>
                    <p><a asp-controller="Shop" asp-action="Index" class="btn btn-secondary me-2">Shop Now</a></p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="~/images/couch.png" class="img-fluid" alt="Couch Image">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->
<!-- Start Product Section -->
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @foreach (var shop in Model.Shops)
            {
                <!-- Each product takes up 1/3 of the row on medium and large screens (col-md-4) -->
                <div class="col-12 col-md-4 col-lg-4 mb-5">
                    <a class="product-item" asp-action="Details" asp-controller="Shop" asp-route-id="@shop.Id">
                        <img src="~/files/images/@shop.ImageName" class="img-fluid product-thumbnail" alt="@shop.Name">
                        <h3 class="product-title">@shop.Name</h3>
                        <strong class="product-price">$@shop.Price</strong>
                        <span class="icon-cross">
                            <img src="~/images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>


<!-- End Product Section -->
<!-- Start Why Choose Us Section -->
<div class="why-choose-section">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-6">
                <h2 class="section-title">Why Choose Us</h2>
                <div class="row my-5">
                    <div class="col-6 col-md-6">
                        <div class="feature">
                            <div class="icon">
                                @foreach (var ser in Model.Services)
                                {
                                    <img src="~/files/images/@ser.ImageName" alt="Service Image" class="img-fluid">
                                    <h3>@ser.Name</h3>
                                    <p>@Html.Raw(@ser.Description)</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="img-wrap">
                    <img src="~/images/why-choose-us-img.jpg" alt="Why Choose Us Image" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Why Choose Us Section -->
<!-- Start We Help Section -->
<div class="we-help-section">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-7 mb-5 mb-lg-0">
                <div class="imgs-grid">
                    <div class="grid grid-1"><img src="~/images/img-grid-1.jpg" alt="Image 1" /></div>
                    <div class="grid grid-2"><img src="~/images/img-grid-2.jpg" alt="Image 2" /></div>
                    <div class="grid grid-3"><img src="~/images/img-grid-3.jpg" alt="Image 3" /></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End We Help Section -->
<!-- Start Testimonial Slider -->
<div class="testimonial-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mx-auto text-center">
                <h2 class="section-title">Testimonials</h2>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="testimonial-slider-wrap text-center">
                    <div id="testimonial-nav">
                        <span class="prev" data-controls="prev"><span class="fa fa-chevron-left"></span></span>
                        <span class="next" data-controls="next"><span class="fa fa-chevron-right"></span></span>
                    </div>

                    <div class="testimonial-slider">
                        @foreach (var test in Model.Testimonials)
                        {
                            <div class="item">
                                <div class="row justify-content-center">
                                    <div class="col-lg-8 mx-auto">
                                        <div class="testimonial-block text-center">
                                            <blockquote class="mb-5">
                                                <p>@Html.Raw(@test.Description)</p>
                                            </blockquote>
                                            <div class="author-info">
                                                <div class="author-pic">
                                                    <img src="~/files/images/@test.ImageName" alt="@test.Name" class="img-fluid">
                                                </div>
                                                <h3 class="font-weight-bold">@test.Name</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Testimonial Slider -->
<!-- Start Blog Section -->
<div class="blog-section">
    <div class="container">
        <div class="row">
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-12 col-sm-6 col-md-4 mb-5">
                    <div class="post-entry">
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="post-thumbnail">
                            <img src="~/files/images/@blog.ImageName" alt="Image" class="img-fluid">
                        </a>
                        <div class="post-content-entry">
                            <h3><a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">@blog.Name</a></h3>
                            <div class="meta">
                                <span>by <a href="#">@blog.CreatedBy</a></span>
                                <span>on @blog.CreatedAt.ToShortDateString()</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
        
<!-- End Blog Section -->
