@model IEnumerable<Landing.PL.Areas.Dashboard.ViewModels.ShopFormVM>

<!-- Start Hero Section -->
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>Shop</h1>
					<p><a asp-controller="Shop" asp-action="Index" class="btn btn-secondary me-2">Shop Now</a></p>
				</div>
			</div>
			<div class="col-lg-7">
				<div class="hero-img-wrap">
					<img src="~/images/couch.png" class="img-fluid">
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Hero Section -->
<!-- Start Shop Section -->
<div class="untree_co-section product-section before-footer-section">
	<div class="container">
		<div class="row">
			@foreach (var shop in Model)
			{
				<!-- Each product takes up 1/3 of the row on medium and large screens (col-md-4) -->
				<div class="col-12 col-md-4 col-lg-4 mb-5">
					<a class="product-item" asp-action="Details" asp-controller="Shop" asp-route-id="@shop.Id">
						<img src="~/files/images/@shop.ImageName" class="img-fluid product-thumbnail" alt="@shop.Name">
						<h3 class="product-title">@shop.Name</h3>
						<strong class="product-price">$@shop.Price</strong>
						<span class="icon-cross">
							<img src="~/images/cross.svg" class="img-fluid">
						</span>
					</a>
				</div>
			}
		</div>
	</div>
</div>
<!-- End Shop Section -->
